<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <title>Home</title>

  <link rel="stylesheet" href="/leafletcss/leaflet.css" />
  <script src="/leafletjs/leaflet.js"></script>

  <link rel="stylesheet" href="/css/index.css">
</head>

<body class="page-home">
  <header class="site-header">
    <div class="site-header__left">
      <%- include('../partials/header'); %>
    </div>

    <div class="site-header__right">
      <div class="header-menu">
        <button class="header-button" type="button" aria-haspopup="true" aria-expanded="false" aria-controls="header-dropdown">
          ☰
        </button>

        <div id="header-dropdown" class="header-dropdown" role="menu" aria-label="Header menu">
          <a role="menuitem" href="/beheer">Login</a>
          <a role="menuitem" href="/info">Info</a>
          <a role="menuitem" href="/data">Share data</a>
          <a role="menuitem" href="/about">About us</a>
        </div>
      </div>
    </div>
  </header>

  <main class="home-layout">
    <section class="home-info">
      <div class="home-title-row">
        <h2>Kumasi Air Quality</h2>

        <div class="home-actions">
          <span class="chip">NO₂</span>
          <a href="/info" class="info-btn" aria-label="Info this project">i</a>
        </div>
      </div>

      <div class="home-subrow">
        <div class="view-toggle" data-view-toggle>
          <button class="view-toggle__item is-active" data-view="map" type="button">Map</button>
          <button class="view-toggle__item" data-view="table" type="button">Table</button>
        </div>
      </div>
    </section>

    <div class="view-container">
      <div id="map-view" class="view is-active">
        <div id="map"></div>
      </div>

      <div id="table-view" class="view">
        <div style="padding: 12px; color:#000;">Tabel</div>
        <table id="tableData" style="color: #000;">
          <tr>
            <th>Test Header</th>
            <td>
              Test
            </td>
            <td>
              Test 2
            </td>

          </tr>
        </table>
      </div>
    </div>
  </main>

  <script id="boot-data" type="application/json">
    <%- JSON.stringify({ keuzes: keuzes || [], points: initialPoints || [] }) %>
  </script>

  <script src="/js/headerMenu.js" defer></script>
  <script src="/js/map.js" defer></script>
  <script type="module" src="/js/index.js"></script>
  

  <% if (process.env.VERCEL) { %>
    <script>
      window.si = window.si || function () { (window.siq = window.siq || []).push(arguments); };
    </script>
    <script defer src="/_vercel/speed-insights/script.js"></script>

    <script>
      window.va = window.va || function () { (window.vaq = window.vaq || []).push(arguments); };
    </script>
    <script defer src="/_vercel/insights/script.js"></script>
  <% } %>
</body>
</html>
