<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>Login</title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-8LY6XRF6EB"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-8LY6XRF6EB');
</script>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div class="auth-page">
            <div class="auth-card">
                <h1 class="auth-title">Login</h1>
                <p class="auth-subtitle">Enter your email address to receive a login code.</p>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="auth-error"><%= error %></div>
                <% } %>

                <form method="POST" action="/loginform" class="auth-form">
                    <div>
                        <label for="email">Email address</label>
                        <input id="email" name="email" type="email" class="auth-input" required>
                    </div>
                    <button type="submit" class="auth-button">Send code</button>
                </form>

                <p class="auth-footer-text">
                    You will receive an email with your login code within a few seconds.
                </p>
            </div>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
<script>
